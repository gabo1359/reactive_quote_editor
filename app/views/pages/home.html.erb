<main class="container">
  <div class="home">
    <h1 class="home__title">Quote editor</h1>
    <p class="home__description">A blazing fast quote editor built with Hotwire</p>

    <% if user_signed_in? %>
      <%= link_to "View quotes", quotes_path, class: "btn btn--secondary" %>
    <% else %>
      <%= link_to "Sign in", new_user_session_path, class: "btn btn--secondary" %>
    <% end %>
  </div>
</main>
